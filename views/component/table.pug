div(class='search-value' style='display:none;' id='search-value') #{results.searchValue}
div(class='search-value' style='display:none;' id='pageNumber') 1

div(class='resultDiv')
    table(class="ui red table" id='resultList')
        thead
            tr
                th(class='ten wide') 文件名称
                th(class='three wide center aligned')  文件类型
                th(class='three wide center aligned')  文件大小
        tbody
            each result in results[0]
                tr
                    td
                        a(class='text' href=`/result/?view=${result.shareid}` target='_blank') #{result.title}
                    td(class='center aligned')
                        a(class='text' href=`/result/?view=${result.shareid}` target='_blank') #{result.category}
                    td(class='center aligned')
                        a(class='text' href=`/result/?view=${result.shareid}` target='_blank') #{result.size}
        tfoot
            tr
                th(colspan="3")
                    div(class='ui grid' id='pagesDiv')
                        div(class='three wide column')
                            div(class='ui centered sub header') 找到：
                                span(id='totalResult') #{results[1][0].total}
                        div(class='eight wide column')
                            button(class="ui negative basic button" id='homePage' data-value='0' disabled='true') 首页
                            button(class="ui negative basic button" id='prePage' data-value='0' disabled='true') 上一页
                            button(class="ui negative basic button" id='nextPage' data-value='1') 下一页
                        div(class='five wide column')
    div(class='dividerPages')
